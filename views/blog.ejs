<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/blog.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <!-- ----------------------- blog---------------------------- -->
    <div class="container text-center">
      <div class="row">
        <div class="col-8">
          <article class="read">
            <div class="blog-body">
              <h1><%= blog.title %></h1>
              <div>
                <p><%= blog.createdBy.fullName %></p>
              </div>
              
            </div>
            <hr />
            <div class="blog-body">
              <img
                src="<%= blog.coverImageURL %>"
                height="600px"
                width="780px"
              />
            </div>
            <div class="blog-body text">
              <p body-text><%= blog.body %></p>
            </div>
          </article>

          <div class="container mt-3 comment">
            <form action="">
              <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea
                  name="comment"
                  class="form-control"
                  id="comment"
                ></textarea>
              </div>
              <div class="mb-3">
                <button class="btn btn-primary ">Submit</button>
              </div>
            </form>
          </div>
        </div>
        <% if (locals.user ) { %>
        <div class="col-4 recommend">
          <h2>Recommended for you!</h2>
          <div>
            <!------------------ from here starts the recommended blogs ------------->
            <div class="container mt-5 row row-cols-1">
              <% allBlogs.forEach((blog) => { %>
              <div class="col rec">
                <div class="card col">
                  <div
                    class="bg-image hover-overlay"
                    data-mdb-ripple-init
                    data-mdb-ripple-color="light"
                  >
                    <img
                      src="<%= blog.coverImageURL %>"
                      class="card-img-top"
                      height="200px"
                      width="150px"
                      alt="..."
                    />
                    <a href="#!">
                      <div
                        class="mask"
                        style="background-color: rgba(251, 251, 251, 0.15)"
                      ></div>
                    </a>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text">
                      <%= `${blog.body.slice(0,20)}...` %>
                    </p>
                    <a
                      href="/blog/<%= blog._id %>"
                      class="btn btn-primary"
                      data-mdb-ripple-init
                      >View</a
                    >
                  </div>
                </div>
              </div>
              <% }); %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <%- include("./partials/scripts") %>
  </body>
</html>
